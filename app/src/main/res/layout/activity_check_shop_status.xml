<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Shops.CheckShopStatus">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/back"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:elevation="2dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Shop Status"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:elevation="2dp"
            android:text=""
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/businessinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Business Info"
            app:strokeWidth="1dp"
            android:clickable="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/green"
            app:cornerRadius="20dp"
            app:strokeColor="@color/green"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_checkbuss"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_bussinfo"
            android:src="@drawable/ic_editshop"
            app:layout_constraintEnd_toEndOf="@+id/businessinfo"
            app:layout_constraintTop_toTopOf="@+id/businessinfo"
            app:layout_constraintBottom_toBottomOf="@+id/businessinfo"
            android:background="@drawable/circle_drwable"
            android:layout_width="55dp"
            android:layout_marginEnd="-2dp"
            android:padding="18dp"
            android:elevation="2dp"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/img_checkbuss"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/businessinfo"
            app:layout_constraintBottom_toBottomOf="@+id/businessinfo"
            android:background="@drawable/green_light_circle"
            android:layout_width="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:elevation="2dp"
            android:layout_height="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/const1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/businessservice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Services"
            android:clickable="false"
            app:strokeWidth="1dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/green"
            app:cornerRadius="20dp"
            app:strokeColor="@color/green"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_checkservice"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_service"
            android:src="@drawable/ic_editshop"
            app:layout_constraintEnd_toEndOf="@+id/businessservice"
            app:layout_constraintTop_toTopOf="@+id/businessservice"
            app:layout_constraintBottom_toBottomOf="@+id/businessservice"
            android:background="@drawable/circle_drwable"
            android:layout_width="55dp"
            android:layout_marginEnd="-2dp"
            android:padding="18dp"
            android:elevation="2dp"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/img_checkservice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/businessservice"
            app:layout_constraintBottom_toBottomOf="@+id/businessservice"
            android:background="@drawable/green_light_circle"
            android:layout_width="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:elevation="2dp"
            android:layout_height="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/businesssportflio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Portfolio"
            app:strokeWidth="1dp"
            android:clickable="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/green"
            app:cornerRadius="20dp"
            app:strokeColor="@color/green"
            android:backgroundTint="@color/white"
            android:gravity="start|center"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_checkportfolio"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_portfoilo"
            android:src="@drawable/ic_editshop"
            app:layout_constraintEnd_toEndOf="@+id/businesssportflio"
            app:layout_constraintTop_toTopOf="@+id/businesssportflio"
            app:layout_constraintBottom_toBottomOf="@+id/businesssportflio"
            android:background="@drawable/circle_drwable"
            android:layout_width="55dp"
            android:layout_marginEnd="-2dp"
            android:padding="18dp"
            android:elevation="2dp"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/img_checkportfolio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/businesssportflio"
            app:layout_constraintBottom_toBottomOf="@+id/businesssportflio"
            android:background="@drawable/green_light_circle"
            android:layout_width="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:elevation="2dp"
            android:layout_height="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/payment"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:text="Payment"
        android:background="@drawable/green_btn"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint3"
        android:layout_width="130dp"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>