<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="60dp"
    android:elevation="2dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cardd" />
    <ImageView
        android:id="@+id/img_dots"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/horizontal_dots"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cardnumber"
        android:textColor="@color/white"
        android:text="XXXX XXXX XXXX XXXX"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/img_dots"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_valid"
        android:textColor="@color/white"
        android:text="VALID \n UPTO"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cardnumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_validupto"
        android:textColor="@color/white"
        android:text="XXXX"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_cardnumber"
        app:layout_constraintStart_toEndOf="@+id/tv_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textcvv"
        android:textColor="@color/white"
        android:text="CVV"
        android:layout_marginStart="75dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/tv_valid"
        app:layout_constraintStart_toEndOf="@+id/tv_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_cvv"
        android:textColor="@color/white"
        android:text="XXX"
        android:layout_marginStart="75dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins"
        android:layout_marginEnd="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textcvv"
        app:layout_constraintStart_toEndOf="@+id/tv_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>